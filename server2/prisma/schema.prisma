generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  contact      String?
  college      String
  course       String
  department   String?
  yearOfStudy  Int?
  username     String    @unique
  password     String
  role         String
  registrations Registration[]
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  location    String?
  description String?
  time        DateTime
  category    String
  registrations Registration[]
}

model Registration {
  id               Int      @id @default(autoincrement())
  registrationTime DateTime @default(now())
  userId           Int
  eventId          Int

  user User @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}